<%= tag.nav class: "flex justify-between bg-black mx-auto px-16 py-4" do %>
  <%= tag.div class: "flex gap-2 items-center" do%>
  <%= link_to"Password Manager", root_path, class: "text-xl no-underline text-white" %>

    <%= tag.ul class: "list-none flex gap-2" do %>
      <%= tag.li link_to "Home", root_path, class: "text-white"  %>
    <% end %>
  <% end %>

  <%= tag.ul class: "list-none flex gap-2 items-center text-white" do %>
    <% if user_signed_in? %>
      <%= link_to "Profile", edit_user_registration_path, class: "text-white" %>
      <%= button_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "text-white"   %>
      <%= link_to "Signup", new_user_registration_path, class: "text-white"  %>
    <% end %>
  <% end %>
<% end %>
<%= tag.div class: "mb-4 flex justify-between items-center" do %>
  <%= tag.h1 class: "mb-0" do %>
    <%= @password.url %>
    
    <%= link_to @password.url, target: :_blank do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="inline-block w-6 h-6 text-blue-500">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
      </svg>
    <% end %>
  <% end %>

  <%= link_to "Edit", edit_password_path(@password) %>
<% end %>

<%= tag.h6 "Username / Email" %>
<%= tag.div class: "flex items-center gap-1" do %>
  <%= tag.pre (tag.code @password.username), class: "my-0 flex-grow" %>
  <%= button_tag "Copy", class: "px-5 py-2.5 bg-gray-200 rounded", data: { controller: "clipboard", action: "clipboard#copy", clipboard_content_value: @password.username } %>
<% end %>

<%= tag.h6 "Password" %>
<%= tag.div class: "flex items-center gap-1" do %>
  <%= tag.pre (tag.code @password.password), class: "my-0 flex-grow" %>
  <%= button_tag "Copy", class: "px-5 py-2.5 bg-gray-200 rounded", data: { controller: "clipboard", action: "clipboard#copy", clipboard_content_value: @password.password } %>
<% end %>

<%= form_with model: password do |form| %>
  <% if form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |message| %>
      <%= tag.div message %>
    <% end %>
  <% end %>
  <%= tag.div class: "field" do %>
    <%= form.label :url %>
    <%= form.url_field :url %>
  <% end %>

  <%= tag.div class: "field" do %>
    <%= form.label :username %>
    <%= form.text_field :username %>
  <% end %>

  <%= tag.div class: "field" do %>
    <%= form.label :password %>
    <%= form.text_field :password %>
  <% end %>

  <%= tag.div class: "field" do %>
    <%= form.submit %>
    <%= button_tag "Delete", form: "delete_password" if form.object.persisted? && current_user_password.deletable? %>
  <% end %>
<% end %>

<%= form_with model: password, method: :delete,  id: "delete_password", data: { turbo_confirm: "Are you sure?" }, class: "btn_delete" %>
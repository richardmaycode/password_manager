<%= tag.div id: dom_id(password) do %>
  <%= link_to password, id: dom_id(password) ,class: "p-4 flex justify-between no-underline hover:bg-gray-200" do %>
    <%= tag.div class: "flex flex-col" do %>
      <%= tag.div password.url, class: "text-sm text-gray-500 font-normal" %>
      <%= tag.div password.username %>
    <% end %>
    <%= tag.div class: "flex gap-4" do %>
      <%= tag.div do %>
        <%= tag.div "Shares", class: "text-sm text-gray-500 font-normal"  %>
        <%= tag.div password.user_passwords.count, class: "text-center" %>
      <% end %>
      <%= tag.div do %>
        <%= tag.div "Owner", class: "text-sm text-gray-500 font-normal"  %>
        <%= tag.div password.user_passwords.where(role: :owner).first.user.email, class: "text-center" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>